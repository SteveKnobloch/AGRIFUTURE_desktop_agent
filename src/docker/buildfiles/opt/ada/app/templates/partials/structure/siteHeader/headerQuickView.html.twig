<div class="card bg-white p-2 analysis">
    <div class="d-flex justify-content-between mb-1">
        <span class="analysis-title text-truncate">
            <strong>
                <small>
                     {{ title }}
                </small>
            </strong>
        </span>
        <div class="d-flex">
            <a class="btn btn-link btn-small" href="{{ path('app_page_analysis_show') }}" title="{% trans %}Show details of the current analysis{% endtrans %}">
                <i class="bi bi-eye"></i>
                {% trans %}Details{% endtrans %}
            </a>
            <a class="btn btn-link btn-small" href="#" title="{% trans %}Show results of the current analysis on the AGRIFUTURΞ website{% endtrans %}">
                <i class="bi bi-bar-chart"></i>
                {% trans %}Results{% endtrans %}
            </a>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        {% include 'partials/states/badge.html.twig' with {'state': state, 'small': '1'} %}
        <div class="dates text-nowrap ms-2">
            <small>
                {% if app.request.locale == 'de' %}
                    {{ date | date("d.m.Y") }}
                {% else %}
                    {{ date | date("m/d/Y") }}
                {% endif %}
            </small>
            <span class="mx-1">/</span>
            <small>
                {% if app.request.locale == 'de' %}
                    {{ date | date("g:i")}} Uhr
                {% else %}
                    {{ date | date("g:iA")}}
                {% endif %}
            </small>
            <span class="mx-1">/</span>
            <small>
                15h 13m
            </small>
        </div>
    </div>
</div>
