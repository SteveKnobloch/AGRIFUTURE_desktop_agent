{
    "name": "dreistromland/agrifuture-desktop-agent",
    "description": "",
    "license": "GPL-2.0-or-later",
    "type": "project",
    "authors": [
        {
            "name": "dreistrom.land",
            "homepage": "https://www.dreistrom.land",
            "role": "Developer"
        }
    ],
    "homepage": "http://www.dreistrom.land/",
    "require": {
        "doctrine/doctrine-bundle": "^2.7",
        "doctrine/migrations": "^3.5",
        "doctrine/orm": "^2.13",
        "symfony/dotenv": "^6.1",
        "symfony/flex": "^2.2",
        "symfony/framework-bundle": "^6.1",
        "symfony/twig-bundle": "^6.1",
        "symfony/webpack-encore-bundle": "^1.16",
        "symfony/yaml": "^6.1",
        "twig/extra-bundle": "^2.12 || ^3.0",
        "twig/twig": "^2.12 || ^3.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.28",
        "friendsofphp/php-cs-fixer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "symfony/flex": true
        },
        "bin-dir": "bin",
        "optimize-autoloader": true,
        "platform": {
            "php": "8.1"
        },
        "process-timeout": 0,
        "sort-packages": true
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        },
        "symfony": {
            "docker": false
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "build:frontend": [
            "@build:frontend:production"
        ],
        "build:frontend:development": [
            "yarn install",
            "yarn dev"
        ],
        "build:frontend:production": [
            "yarn install",
            "yarn build"
        ],
        "codestyle:check": [
            "@php bin/php-cs-fixer --verbose --dry-run fix"
        ],
        "codestyle:fix": [
            "@php bin/php-cs-fixer --verbose --diff fix"
        ],
        "composer:normalize:check": [
            "@composer normalize --dry-run"
        ],
        "composer:normalize:fix": [
            "@composer normalize"
        ]
    }
}
